{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]   ,
    "experimentalDecorators": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
